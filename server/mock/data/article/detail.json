/**
 * 获取指定文章
 *
 * @url /getArticleById
 *
 * 参数说明：
 * _id: 文章id
 * title: 标题
 * category: 类别
 * content: 内容
 * isOriginal: 是否原创 0:非原创 1：原创
 * source: 来源
 * state: 状态 0:未发布 1：已发布
 * _id: 文章id
 * publishTime: 发布时间
 *
 */
{
  "code": 0,
  "data|10": {
    "_id": 1,
    "title|1-10": "@ctitle",
    "category|1": ["js", "css"],
    "content": "@csentence",
    "isOriginal|1": [0, 1],
    "source|2-8": "@cword",
    "state|1": [0, 1],
    "publishTime": "@date('yyyy-MM-dd hh:mm:ss')"
  }
}
